<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchingFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Ä°l"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toStartOf="@id/find_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_offers"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/city_complete_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/find_post"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_search"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/city_text_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/city_text_input"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_offers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_text_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>