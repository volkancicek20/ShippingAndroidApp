<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/recycler_profile_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/person_square"
        android:layout_margin="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/timestamp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="15 dk önce"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/recycler_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/recycler_profile_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recycler_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user-1214"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/recycler_profile_image"
        app:layout_constraintStart_toEndOf="@id/recycler_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/recycler_profile_image"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Teklif"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_profile_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/turks_lira"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/icon_turkish_lira"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toEndOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@id/recycler_profile_image" />

    <TextView
        android:id="@+id/recycler_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5000"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/turks_lira"
        app:layout_constraintTop_toBottomOf="@id/recycler_profile_image" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="İstanbul(Arnavutköy) -> Ankara(Gölbaşı)"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/offers_reject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_reject"
        app:layout_constraintTop_toTopOf="@id/offers_approve_button"
        app:layout_constraintBottom_toBottomOf="@id/offers_approve_button"
        app:layout_constraintEnd_toStartOf="@id/offers_approve_button"/>

    <ImageView
        android:id="@+id/offers_approve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/icon_approve"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>